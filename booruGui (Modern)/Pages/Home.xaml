<UserControl x:Class="booruGui__Modern_.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        
                    </Grid.ColumnDefinitions>
                    <Label Content="Tags:" Grid.Column="0" Margin="0,0,5,0" Foreground="White"/>
                    <TextBox Grid.Column="1" MinWidth="300" Margin="0,0,5,0"></TextBox>
                    <ComboBox Grid.Column="2" MinWidth="75" Margin="0,0,5,0"></ComboBox>
                    <Button Grid.Column="3" Content="Get" Margin="0,0,5,0"></Button>
                    
                </Grid>
                

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
